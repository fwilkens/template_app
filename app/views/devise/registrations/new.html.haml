%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field.row.form-group
    .col-md-2= f.label :email
    .col-md-4= f.email_field :email, autofocus: true, class: 'form-control'
  .field.row.form-group
    .col-md-2= f.label :bio
    .col-md-4= f.text_area :bio, class: 'form-control'
  .field.row.form-group
    .col-md-2= f.label :password
    .col-md-4= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum", class: 'form-control'
  .field.row.form-group
    .col-md-2= f.label :password_confirmation
    .col-md-4= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
  .actions.row.form-group
    .col-md-6
  .row.form-group
    = f.submit "Sign up", class: 'btn btn-success'
= render "devise/shared/links"
